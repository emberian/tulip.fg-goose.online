<div id="compose-persona-selector" class="compose-persona-selector" style="display: none;">
    <button type="button" class="persona-selector-button tippy-zulip-delayed-tooltip"
            data-tippy-content="{{t 'Post as character'}}"
            aria-label="{{t 'Select character to post as'}}">
        <span class="persona-avatar">
            <i class="fa fa-user" aria-hidden="true"></i>
        </span>
        <span class="persona-name">{{t 'Yourself'}}</span>
        <i class="fa fa-caret-down" aria-hidden="true"></i>
    </button>
</div>
